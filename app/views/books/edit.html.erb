<div class="container">
	<div id="alert alert-danger">
				<% if @book.errors.any? %>
        			<h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
        			<ul>
        			<% @book.errors.full_messages.each do |message| %>
            			<li><%= message %></li>
        			<% end %>
        		    </ul>
    			<% end %>
    </div>
  <div class="row">
  	<div class="col-md-6 col-md-offset-3">
		<h1> Editing Book</h1>

		  <%= form_for(@book) do |f| %>

			<div class="field row">
			  <label for="book_title">Title</label><br>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>

			<div class="field row">
			  <label for="book_body">Opinion</label><br>
				<%= f.text_area :body, class: "col-xs-12 book_body" %><br>
			</div>

			<div class="actions row" style="margin-top: 10px;"">
				<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %></br>

		  <% end %>

		<%= link_to 'Show', book_path(@book) %> | 
		<%= link_to 'Back', books_path %>

</div>

